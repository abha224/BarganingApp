<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/parent_of_card"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/electronics">
    </RelativeLayout>

    <android.support.v4.widget.CircleImageView
        android:layout_width="150dp"
        android:id="@+id/sportsImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:adjustViewBounds="true"
        android:src="@drawable/negoreg"
        android:layout_height="150dp" />

    <android.support.design.card.MaterialCardView
        android:layout_width="290dp"
        app:cardCornerRadius="10dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Firstname"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/first_name"
            android:padding="10dp"
            android:text="Lastname"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp" />

        <RatingBar
        android:id="@+id/ratingBar"

        android:layout_below="@+id/sportsImage"
        android:layout_width="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/parent_of_card"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/neg_profile_pincode"
            android:layout_marginRight="20dp"
            android:text="Pin code"
            android:textSize="18sp"
            android:layout_below="@id/neg_profile_lastname"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Category 1 :"
            android:textSize="18sp"
            android:id="@+id/neg_profile_cat1hard"
            android:layout_below="@id/neg_profile_pincode"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/neg_profile_cat1"
            android:layout_marginRight="20dp"
            android:text="Category"
            android:textSize="18sp"
            android:layout_below="@id/neg_profile_pincode"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="Category 2 :"
            android:textSize="18sp"
            android:id="@+id/neg_profile_cat2hard"
            android:layout_below="@id/neg_profile_cat1hard"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/neg_profile_cat2"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginRight="20dp"
            android:text="Category"
            android:textSize="18sp"
            android:layout_below="@id/neg_profile_cat1"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="Category 3 :"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:id="@+id/neg_profile_cat3hard"
            android:layout_below="@id/neg_profile_cat2hard"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/neg_profile_cat3"
            android:layout_marginRight="20dp"
            android:text="Category"
            android:textSize="18sp"
            android:layout_below="@id/neg_profile_cat2"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="Contact : "
            android:textSize="18sp"
            android:id="@+id/neg_profile_phnohard"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/neg_profile_cat3hard"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/neg_profile_phno"
            android:layout_marginRight="20dp"
            android:text="EnterNoHere"
            android:textSize="18sp"
            android:layout_below="@id/neg_profile_cat3hard"
            android:layout_alignParentRight="true"/>

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <TextView
                android:id="@+id/ph_no"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name"
                android:layout_centerHorizontal="true"
                android:text="City"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="140dp"
                android:text="Rating"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:text="4.5"
                android:textColor="@color/white"
                android:textSize="19dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="140dp"
                android:layout_marginRight="20dp"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="110dp"
                android:layout_marginRight="26dp"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="19dp" />


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>