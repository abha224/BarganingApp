<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  >

    <android.support.design.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:strokeColor="@color/colorGrey"
        app:cardCornerRadius="5dp"
        app:contentPadding="5dp"
        app:strokeWidth="1dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/toolbarwhite"

        style="@style/Widget.MaterialComponents.CardView"

        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/sportsImage"
                android:layout_width="120dp"
                android:layout_margin="30dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:layout_below="@id/neg_profile_text"
                android:src="@drawable/negoreg"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROFILE"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/neg_profile_text"
                android:layout_centerHorizontal="true"
                android:textSize="24sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/neg_profile_align_name"
                android:layout_below="@id/sportsImage"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/neg_profile_firstname"
                android:layout_toStartOf="@id/neg_profile_align_name"
                android:layout_toLeftOf="@id/neg_profile_align_name"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@id/sportsImage"
                android:layout_marginTop="20dp"
                android:text="First name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/neg_profile_lastname"
                android:layout_width="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:layout_below="@id/sportsImage"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@id/neg_profile_align_name"
                android:layout_toEndOf="@id/neg_profile_align_name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:text="Last name"
                android:textSize="18sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/neg_profile_firstname"
                android:text="City"
                android:id="@+id/neg_profile_city"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/neg_profile_pincode"
                android:layout_marginRight="20dp"
                android:text="Pin code"
                android:textSize="18sp"
                android:layout_below="@id/neg_profile_lastname"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Category 1 :"
                android:textSize="18sp"
                android:id="@+id/neg_profile_cat1hard"
                android:layout_below="@id/neg_profile_pincode"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/neg_profile_cat1"
                android:layout_marginRight="20dp"
                android:text="Category"
                android:textSize="18sp"
                android:layout_below="@id/neg_profile_pincode"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Category 2 :"
                android:textSize="18sp"
                android:id="@+id/neg_profile_cat2hard"
                android:layout_below="@id/neg_profile_cat1hard"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/neg_profile_cat2"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginRight="20dp"
                android:text="Category"
                android:textSize="18sp"
                android:layout_below="@id/neg_profile_cat1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Category 3 :"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:id="@+id/neg_profile_cat3hard"
                android:layout_below="@id/neg_profile_cat2hard"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/neg_profile_cat3"
                android:layout_marginRight="20dp"
                android:text="Category"
                android:textSize="18sp"
                android:layout_below="@id/neg_profile_cat2"
                android:layout_alignParentRight="true"/>
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentStart="true"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_marginStart="20dp"-->
                <!--android:layout_marginLeft="20dp"-->
                <!--android:text="Age : "-->
                <!--android:textSize="18sp"-->
                <!--android:id="@+id/neg_profile_agehard"-->
                <!--android:layout_below="@id/neg_profile_cat3hard"-->
                <!--android:layout_alignParentLeft="true"-->
                <!--/>-->
            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_marginEnd="20dp"-->
                <!--android:id="@+id/neg_profile_age"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:text="EnterAgeHere"-->
                <!--android:textSize="18sp"-->
                <!--android:layout_below="@id/neg_profile_cat3"-->
                <!--android:layout_alignParentRight="true"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Contact : "
                android:textSize="18sp"
                android:id="@+id/neg_profile_phnohard"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/neg_profile_cat3hard"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/neg_profile_phno"
                android:layout_marginRight="20dp"
                android:text="EnterNoHere"
                android:textSize="18sp"
                android:layout_below="@id/neg_profile_cat3hard"
                android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/neg_profile_phnohard"
                    android:layout_marginTop="20dp"/>

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
