<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

        <android.support.design.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:id="@+id/card_view"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"

            app:strokeColor="@color/colorGrey"
            app:cardCornerRadius="5dp"
            app:contentPadding="5dp"
            app:strokeWidth="1dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/toolbarwhite"

            style="@style/Widget.MaterialComponents.CardView"

            >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/sportsImage"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:adjustViewBounds="true"
                            android:src="@drawable/negoreg"
                            />
                        <TextView
                            android:id="@+id/first_name"

                            android:layout_toRightOf="@+id/sportsImage"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20dp"

                            />
                        <TextView
                            android:layout_toRightOf="@+id/first_name"
                            android:id="@+id/last_name"
                            android:textColor="@color/colorPrimaryDark"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:layout_marginLeft="5dp"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:id="@+id/ph_no"
                            android:layout_toRightOf="@+id/sportsImage"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/first_name"
                            android:padding="8dp"
                            android:textSize="17dp"
                            />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ph_no"
                            android:layout_alignParentEnd="true"
                            android:background="@color/toolbarwhite"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                                android:id="@+id/card_click"
                            />


                </RelativeLayout>
        </android.support.design.card.MaterialCardView>
