<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/applogo"
            android:layout_marginBottom="50dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Negotiator"
                    android:fontFamily="cursive"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="40dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/negotiatorwelcome"
                    android:src="@drawable/negoreg"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already Signed up?Login Here."
                    android:id="@+id/negotiatorwelcometext"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shopper"
                    android:fontFamily="cursive"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="40dp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopperwelcome"
                    android:background="@drawable/img"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Already Signed up?Login Here."
                    android:id="@+id/shopperwelcometext"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>